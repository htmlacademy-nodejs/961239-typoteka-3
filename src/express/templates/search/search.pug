extends ../general/layout.pug

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form.search(method="get" action="/search" autocomplete="off")
            label
              input(type='text' name='query' placeholder='Что ищем?' value=query)
            button.search__button.button.button--transparent(type='submit') Найти
          each article in searchResult
            .search__result
              time.search__date(datetime=article.createDate) #{moment(article.createDate).format(`DD.MM.YYYY hh:mm`)}</time>
                a.search__link(href=`/articles/${article.id}`)
                  | #{article.title}